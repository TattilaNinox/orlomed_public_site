rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Nyilvános dokumentumok - bárki olvashatja
    match /public_documents/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email in ['tattila.ninox@gmail.com'];
    }
    // Törlési kérelmek - bárki létrehozhat, csak admin olvashatja
    match /deletion_requests/{requestId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email in ['tattila.ninox@gmail.com'];
    }
  }
}
